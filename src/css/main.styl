@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:700');

div.printer-screen
  background-color: lightgray;
  width: 400px;
  margin: 10px auto;
  padding: 4px;
  display: inline-block;
  white-space nowrap;
  span 
    border: rgba(0, 0, 0, 0.25) 1px solid;
    background-color: rgba(0, 0, 0, 0.15);
    padding: 0 4px;
    font-family: 'Source Code Pro', monospace
    font-size: 12pt
    width: 22px;
  i
    font-size: 9.5px


div.printer-screen-buttons
  vertical-align: top;
  margin-top: 7px;

.centered 
  margin-left: auto;
  margin-right: auto;

.network 
  cursor: pointer;

.connected 
  background-color: green;
  border-radius: 1em;
  width: 1em;
  height: 1em;
