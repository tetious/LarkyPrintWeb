div.printer-screen
  background-color: lightgray;
  width: 400px;
  margin: 10px auto;
  padding: 4px;
  display: inline-block;
  white-space nowrap;
  span 
    border: rgba(0, 0, 0, 0.25) 1px solid;
    background-color: rgba(0, 0, 0, 0.15);
    padding: 0 4px;
    font-family: 'Source Code Pro', monospace
    font-size: 12pt
    width: 22px;
  i
    font-size: 9.5px


div.printer-screen-buttons
  display: inline-block
  vertical-align: top;
  margin-top: 7px;
  button
    width: 30px
    height: 30px
  i
    width: 10px
    font-size: 10px

table.sd
  width: 100%
  button
    width: 30px
    height: 30px
    margin: 0
  td
    overflow: hidden
    white-space: nowrap

div.sd
  width: 100%
  height: 400px
  overflow: auto
